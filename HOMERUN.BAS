SUB BALLSTRIKE (SWING, BSWING, W, strikes, balls, outs, RESULT, text$)

 HIT = 0
 BREAK = 0
 IF SWING = 1 THEN
  IF BSWING > 230 THEN
   HIT = 1
   strikes = 0
   RESULT = 1
   IF W < 3 THEN
    BREAK = 1
    text$ = "HOME RUN!  "
   ELSE
    text$ = "CAUGHT!    "
    outs = outs + 1
   END IF
  ELSE
   strikes = strikes + 1
   text$ = "STRIKE!   "
  END IF
  SWING = 0
 ELSE
  IF W > 2 THEN
   balls = balls + 1
   text$ = "BALL!     "
  ELSE
   strikes = strikes + 1
   text$ = "STRIKE!   "
  END IF
 END IF

 IF strikes = 3 THEN
  outs = outs + 1
  RESULT = 1
  text$ = "YOU'RE OUT!"
 END IF

 IF balls = 4 THEN
  text$ = "WALK!      "
  RESULT = 1
 END IF

END SUB

